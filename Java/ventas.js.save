function ObtenerRegistrosbusqueda(modulo,request){
var resultado;
	if(Vacio(modulo)){
		return false;
	}
	$.ajax({
		method: "POST",
  		url: "../../php/busqueda.php",
  		data: { modulo: modulo, texto: request},
  		async: false,
  		success: function(datos){
  			resultado = JSON.parse(datos);
  		},
  		error: function (error){
  			console.log("Error "+error);
  		}
	});
	return resultado;
}
